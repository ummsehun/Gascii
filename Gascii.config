# === Ghostty ASCII Video Optimization Settings ===

# (Core 1) Font Size
# Adjust to 2.5, 5.0, 6.0, 7.0 etc.
font-size = 2.5

# (Core 2) Line Height (Remove gaps)
# Set 'adjust-cell-height' to 0 instead of 'line-height'
adjust-cell-height = 0

# (Core 3) Window Padding (Fill screen)
# Use 'window-padding-x/y' instead of 'padding-x/y'
window-padding-x = 0
window-padding-y = 0

# (Core 4) Font Family
# Quote if there are spaces
font-family = "D2Coding"
# Fallback: "Menlo", "Monaco", etc.
